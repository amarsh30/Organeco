<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DetailActivity">

    <ImageView
        android:id="@+id/iv_detail_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        style="@style/textH2Black"
        android:id="@+id/tv_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nama Tanaman"
        app:layout_constraintEnd_toEndOf="@+id/iv_detail_img"
        app:layout_constraintStart_toStartOf="@+id/iv_detail_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_img" />

    <TextView
        style="@style/textH4Black"
        android:id="@+id/type_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jenis Tanaman :"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail_name"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_name" />

    <TextView
        style="@style/textRegular2Black"
        android:id="@+id/tv_detail_type_plant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sayuran"
        app:layout_constraintEnd_toEndOf="@+id/type_plant"
        app:layout_constraintStart_toStartOf="@+id/type_plant"
        app:layout_constraintTop_toBottomOf="@+id/type_plant" />

    <TextView
        style="@style/textH4Black"
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Deskripsi :"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail_type_plant"
        app:layout_constraintStart_toStartOf="@+id/tv_detail_type_plant"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_type_plant" />

    <TextView
        style="@style/textRegular2Black"
        android:id="@+id/tv_detail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pupuk adalah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_description"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintVertical_bias="0.015" />
</androidx.constraintlayout.widget.ConstraintLayout>